<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="80dp"
            android:text="取消"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/confirm"
            android:layout_width="80dp"
            android:text="确认"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#FFD1CDCD"
        android:layout_height="0.1dp"/>
        <sz.tianhe.etc_wallet.weight.MonthWheelView
            android:id="@+id/coin_wheel_view"
            android:layout_width="match_parent"
            app:halfVisibleItemCount="2"
            app:indicatorText=""
            app:wheelCyclic="false"
            app:indicatorTextSize="12sp"
            android:layout_height="wrap_content"
            app:wheelCurtain="false"
            app:selectedTextColor="#000000"
            app:wheelCurtainBorder="false"/>
</LinearLayout>