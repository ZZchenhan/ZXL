<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/bgColor"
            android:layout_height="match_parent">
            <sz.tianhe.baselib.weight.CircleImageView
                android:id="@+id/head"
                android:layout_width="72dp"
                android:layout_marginTop="20dp"
                android:layout_height="72dp"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/textColor"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_head" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/textHintColor"
                android:textSize="12sp"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="17dp"
                android:background="@color/textHintColor"
                />
            <TextView
                android:id="@+id/transcation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/ic_left_arrow"
                android:gravity="center_vertical"
                android:text="交易记录"
                android:textColor="@color/textColor"
                android:textSize="17sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/textHintColor"
                />
            <TextView
                android:id="@+id/user_permission"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/ic_left_arrow"
                android:gravity="center_vertical"
                android:text="用户协议"
                android:textColor="@color/textColor"
                android:textSize="17sp"
               />

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/textHintColor"
                 />

            <TextView
                android:id="@+id/about_me"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/ic_left_arrow"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:textColor="@color/textColor"
                android:textSize="17sp"
               />
            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="0dp"
                android:background="@color/textHintColor"
               />
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="退出登陆"
                android:background="@drawable/bg_first_btn_create"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
        </LinearLayout>
</layout>