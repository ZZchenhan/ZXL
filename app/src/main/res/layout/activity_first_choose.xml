<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".guide.view.FirstChooseActivity">

        <Button
            android:id="@+id/import_wallet"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@mipmap/choose_bg_login"
            android:text="登录钱包"
            android:textColor="#5A3B1A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/create_wallet"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginBottom="19dp"
            android:background="@mipmap/choose_btn_register"
            android:text="注册钱包"
            android:textColor="#5A3B1A"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/import_wallet"
            app:layout_constraintEnd_toEndOf="@+id/import_wallet"
            app:layout_constraintStart_toStartOf="@+id/import_wallet" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="174dp"
            android:layout_height="216dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="111dp"
            android:src="@mipmap/ic_guid_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>
