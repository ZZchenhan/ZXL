<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".guide.view.FirstChooseActivity">

        <Button
            android:id="@+id/import_wallet"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:text="登录钱包"
            android:textSize="16sp"
            android:textColor="@color/first_btn_color"
            android:background="@drawable/bg_first_btn_import"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/create_wallet"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_first_btn_create"
            android:text="创建钱包"
            android:textColor="@color/white"
            android:textSize="16sp"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintBottom_toTopOf="@+id/import_wallet"
            app:layout_constraintEnd_toEndOf="@+id/import_wallet"
            app:layout_constraintStart_toStartOf="@+id/import_wallet" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="117dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           />
    </android.support.constraint.ConstraintLayout>
</layout>
